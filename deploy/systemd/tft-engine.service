[Unit]
Description=TFT AI Trading Engine
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/tft
EnvironmentFile=/home/ubuntu/tft/config/production.env
ExecStart=/home/ubuntu/tft/.venv/bin/python scripts/run_engine.py
Restart=always
RestartSec=5
LimitNOFILE=65535
TimeoutStopSec=35
KillSignal=SIGTERM

[Install]
WantedBy=multi-user.target
