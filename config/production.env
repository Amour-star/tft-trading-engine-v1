ENVIRONMENT=production
TRADING_MODE=PAPER
ALLOW_LIVE_TRADING=false
DATABASE_MODE=SQLITE
SQLITE_PATH=/home/ubuntu/tft/data/tft_engine.db

# Core runtime
LOG_LEVEL=INFO
LOG_DIR=/home/ubuntu/tft/logs
TRADING_ENABLED=true
MAX_DAILY_LOSS_PCT=0.03

# Governance layer
LLM_ENABLED=true
LLM_PROVIDER=anthropic
OPUS_MODEL=claude-opus-4-1
LLM_TIMEOUT_SECONDS=2
LLM_TEMPERATURE=0.1
PER_TRADE_COST_CAP=0.10
DAILY_COST_CAP=5.00
LLM_MAX_FAILURES=3
LLM_CACHE_TTL_SECONDS=300

# Deployment hardening
ENGINE_LOCK_FILE=/tmp/tft_engine.lock
